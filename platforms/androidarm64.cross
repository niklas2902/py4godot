[constants]
ndk_root = '/opt/android-sdk/android-ndk-r29'

[binaries]
c = ndk_root / 'toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android35-clang'
cpp = ndk_root / 'toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android35-clang++'
ar = ndk_root / 'toolchains/llvm/prebuilt/linux-x86_64/bin/llvm-ar'
strip = ndk_root / 'toolchains/llvm/prebuilt/linux-x86_64/bin/llvm-strip'
pkgconfig = 'pkg-config'

[properties]
sys_root = ndk_root / 'toolchains/llvm/prebuilt/linux-x86_64/sysroot'
is_android = 1

[host_machine]
system = 'android'
cpu_family = 'aarch64'
cpu = 'armv8'
endian = 'little'

[built-in options]
cpp_args = ['-O3', '-DNDEBUG', '-w', '-fPIC']

cpp_link_args = ['-s', '-flto', '-fPIC']