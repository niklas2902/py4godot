# Use the latest Ubuntu LTS base image
FROM ubuntu:24.04

# Set environment variables to avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Set the working directory in the container
WORKDIR /app

# Update the package list and install necessary dependencies in a single layer
RUN apt-get update && \
    apt-get install -y \
        python3 \
        python3-pip \
        mingw-w64 \
        && rm -rf /var/lib/apt/lists/* \
        && ln -s /usr/bin/python3 /usr/bin/python

# Copy the local files into the container at /app
COPY . /app

# Install Python dependencies
RUN pip3 install --break-system-packages -r requirements.txt


CMD ["python3", "build.py", "--target_platform=windows64", "--compiler=g++-mingw", "-run_tests=false", "-download_godot=false"]